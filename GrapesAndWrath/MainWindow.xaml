<Window x:Class="GrapesAndWrath.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Grapes And Wrath" Icon="Titlebar.ico" Height="800" Width="300" Background="#FFE6E6E6">
	<DockPanel LastChildFill="True">
		<StackPanel DockPanel.Dock="Top">
			<DockPanel LastChildFill="True">
				<TextBlock DockPanel.Dock="Left" Margin="4,0" FontSize="14" Text="LETTERS:" VerticalAlignment="Center" />
				<ComboBox DockPanel.Dock="Right" Name="combo" Margin="4,5,4,0">
					<ComboBoxItem IsSelected="True">Zynga</ComboBoxItem>
					<ComboBoxItem>TWL 06</ComboBoxItem>
					<ComboBoxItem>SOWPODS</ComboBoxItem>
				</ComboBox>
				<TextBox Name="inputLetters" Margin="0,5,0,0" FontSize="16" CharacterCasing="Upper" />
			</DockPanel>
			<ProgressBar Name="progress" Height="5" />
		</StackPanel>
		<StackPanel DockPanel.Dock="Bottom">
			<DockPanel LastChildFill="True">
				<TextBlock Margin="4,0" FontSize="14" Text="REGEX:" VerticalAlignment="Center" />
				<TextBox Name="inputRx" FontSize="16" CharacterCasing="Upper" />
			</DockPanel>
			<StatusBar>
				<TextBlock Name="statusText" Text="Loading..." />
			</StatusBar>
		</StackPanel>
		<DataGrid Name="resultGrid" ColumnWidth="*" IsReadOnly="True" />
	</DockPanel>
</Window>
