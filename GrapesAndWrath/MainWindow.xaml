<Window x:Class="GrapesAndWrath.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Grapes And Wrath" Icon="Titlebar.ico" Height="800" Width="300" Background="LightGray">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="92" />
		</Grid.ColumnDefinitions>
		<Label    Grid.Row="0" Grid.Column="0" Margin="0,9" FontSize="14" Content="LETTERS:" />
		<TextBox  Grid.Row="0" Grid.Column="1" Name="input" Margin="0,9" FontSize="16" CharacterCasing="Upper" />
		<ComboBox Grid.Row="0" Grid.Column="2" Name="combo" Margin="0,9" Width="85" Height="26">
			<ComboBoxItem IsSelected="True">Zynga</ComboBoxItem>
			<ComboBoxItem>TWL 06</ComboBoxItem>
			<ComboBoxItem>SOWPODS</ComboBoxItem>
		</ComboBox>
		<ProgressBar Grid.ColumnSpan="3" Name="progress" Height="9" Width="284" Margin="0,40,0,0" />
		<DataGrid Grid.Row="1" Grid.ColumnSpan="3" Name="resultGrid" ColumnWidth="*" IsReadOnly="True" />
	</Grid>
</Window>
